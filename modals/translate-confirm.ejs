<%
  const fromLang = (locals.fromLang || '').toUpperCase();
  const toLang = (locals.toLang || '').toUpperCase();
%>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">Confirm Google Translate</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form autocomplete="off" spellcheck="false">
        Really replace the <strong><%= toLang %></strong> content with a Google translation of the <strong><%= fromLang %></strong> version?
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="modal-submit">Translate</button>
      </div>
    </div>
  </div>
</div>