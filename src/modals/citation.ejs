<%
  const rec = locals.rec || {};
  const id = rec.id || '';
  const label = rec.label || '';
  const fieldName = id.split('-')[1] || '';
  const citation = rec.citation || '';
%>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title"><%= label %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form autocomplete="off" spellcheck="false" class="submission" data-id="<%= id %>">
          <div class="form-group">
            <label for="summernote-citation">Citation</label>
            <div class="summernote summernote-citation"
              id="summernote.citation"
              data-property="citation"><%- citation %></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="modal-submit">Save changes</button>
      </div>
    </div>
  </div>
</div>