<%
  const rec = locals.rec || {};
  const id = rec.id || '';
  const label = rec.label || '';
  const units = rec.units || '';
  const rows = rec.rows || [];
%>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title"><%= label %><% if(units) { %> (<%= units %>)<% } %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form autocomplete="off" spellcheck="false" class="submission" data-id="<%= id %>">
          <div style="max-height: 300px; overflow-y: scroll; overflow-x: hidden; padding-right: 15px;">
            <% rows.forEach((row) => { %>
              <div class="form-group row">
                <label class="col-6 col-form-label col-form-label-sm" for="property-row-<%= row.id %>"><%= row.label %></label>
                <div class="col-6">
                  <input
                    type="text"
                    spellcheck="false"
                    autocomplete="off"
                    class="form-control form-control-sm entity-property"
                    id="property.rows.<%= row.id %>"
                    data-property="rows"
                    data-row-id="<%= row.id %>"
                    value="<%= row.string %>">
                </div>
              </div>
            <% }) %>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="modal-submit">Save changes</button>
      </div>
    </div>
  </div>
</div>